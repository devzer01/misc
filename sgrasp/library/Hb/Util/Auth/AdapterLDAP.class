class Hb_Util_Auth_AdapterLDAP 
{
	
	protected $conn = null;

	protected function authenticate($user_login)
	{
		if ($this->conn = ldap_connect(HOSTNAME,PORT))
		{
			if(ldap_bind($this->conn, $user_login->user_name . $user_login->server_domain_name, $user_login->user_password))
			{
				return true;
			}
			
			return false;
		}
		
		return false;
	}
}


