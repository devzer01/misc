class Hb_Util_Service_AddressValidation_AddressValidationFactory
{
	public static function GetInstance($address)
	{		
		$avs = Hb_Util_Service_AddressValidation_Configuration::GetInstance($address->GetAddressCountryCode());
		$avs_class = "Hb_Util_Service_AddressValidation_".$avs; 
		$avs_obj = new $avs_class;
		$avs_obj->SetAddress($address);
		
		return $avs_obj ;
	}
}
