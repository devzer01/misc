class Hb_Mapper_Common_FileType extends Hb_Mapper_Mapper  
{
   /**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'file_type_id';
   
  /**
   * Table name
   *
   * @var string 
   */  
   protected $table = 'file_type';
   
	/**
	 * Builds and returns the File Type domain object
	 *
	 * @param $row $object Result row from the Zend_Db framework for file_type table
	 * @return object An instance of the File Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Common_FileType(
													$row->file_type_id,
													$row->file_type_description
													);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	
		$select->from(array('ft' => 'file_type'),
	 					array('file_type_id',
							  	'file_type_description'
							  )
						 );
	 	return $select;
	}
	
	/**
	 * Returns a tuple by given File Type
	 *
	 * @return object
	 */
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		
	 	$select->where('ft.file_type_id = ?', $id);					 	
		
	 	return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{				
 		/* @var $obj Hb_App_Common_FileType   */

 		$data = array
 		(
			'file_type_description' => $obj->GetTypeDescription()
		);
		
		$db = Hb_Util_Db_Connection::GetInstance();
						
		if (is_null($obj->GetId())) 
		{
			$db->insert('file_type', $data);
			$obj->SetTypeId ($db->lastInsertId());
		} 
		else 
		{
			$db->update('file_type', $data, 'file_type_id = ' . $obj->GetId());	
		}
	}
}
?>