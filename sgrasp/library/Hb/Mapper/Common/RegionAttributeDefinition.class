class Hb_Mapper_Common_RegionAttributeDefinition extends Hb_Mapper_Mapper  
{
   /**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'region_attr_def_id';
   
  /**
   * Table name
   *
   * @var string 
   */  
   protected $table = 'region_attr_def';
   
	/**
	 * Builds and returns the Region Attribute Definition domain object
	 *
	 * @param $row $object Result row from the Zend_Db framework for region_attr_def table
	 * @return object An instance of the Region Attribute Definition domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Common_RegionAttributeDefinition(
													$row->region_attr_def_id,
													$row->region_attr_name,
													$row->region_attr_description
													);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	
		$select->from(array('rd' => 'region_attr_def'),
	 					array('region_attr_def_id',
	 							'region_attr_name',
							  	'region_attr_description'
							  )
						 );
	 	return $select;
	}
	
	/**
	 * Returns a tuple by given Region Attribute Definition
	 *
	 * @return object
	 */
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		
	 	$select->where('rd.' . $this->primary_key . ' = ?', $id);					 	
		
	 	return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{				
 		/* @var $obj Hb_App_Common_RegionAttributeDefinition   */

 		$data = array
 		(
 			'region_attr_name' 			=> $obj->GetAttributeName(),
			'region_attr_description' 	=> $obj->GetAttributeDescription()
		);
		
		$db = Hb_Util_Db_Connection::GetInstance();
						
		if (is_null($obj->GetId())) 
		{
			$db->insert($this->table, $data);
			$obj->SetAttributeDefinitionId ($db->lastInsertId());
		} 
		else 
		{
			$db->update($this->table, $data, $this->primary_key . '=' . $obj->GetId());	
		}
	}
}
?>