class Hb_Mapper_Billing_BillingReportBudgetLineItemDefinitionAttributeDefinition extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'armc_budget_line_item_def_attr_def_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'armc_budget_line_item_def_attr_def';
	
	/**
	 * Builds and returns the Billing Report Budget Line Item Definition Attribute Definition domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the armc_budget_line_item_def_attr_def table
	 * @return object An instance of the Billing Report Budget Line Item Definition Attribute Definition domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Billing_BillingReportBudgetLineItemDefinitionAttributeDefinition($row->armc_budget_line_item_def_attr_def_id,
									$row->armc_budget_line_item_def_attr_name,
									$row->armc_budget_line_item_def_attr_description
									);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('ablidad' => 'armc_budget_line_item_def_attr_def'), array('armc_budget_line_item_def_attr_def_id',
																					  						  'armc_budget_line_item_def_attr_name',
																					  						  'armc_budget_line_item_def_attr_description')
						 );
	 	return $select;
	}
	
	/**
	 * Finds a Billing Report Budget Line Item Definition Attribute Definition by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the armc_budget_line_item_def_attr_def table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('ablidad.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the Billing Report Budget Line Item Definition Attribute Definition domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Billing_BillingReportBudgetLineItemDefinitionAttributeDefinition   */
		 	
	 	$data  = array(
			'armc_budget_line_item_def_attr_name'			=> $obj->GetAttributeName(),
			'armc_budget_line_item_def_attr_description'	=> $obj->GetAttributeDescription()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetAttributeDefinitionId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
}

