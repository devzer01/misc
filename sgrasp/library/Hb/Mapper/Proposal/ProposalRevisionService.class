class Hb_Mapper_Proposal_ProposalRevisionService extends Hb_Mapper_Mapper 
{
	/**
	 * Domain for the Mapper
	 *
	 * @var string 
	 */
	protected $__domain = 'Hb_App_Proposal_ProposalRevisionService';
	
	/**
	 * Gateway for the mapper
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Proposal_ProposalRevisionService';
	
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'proposal_revision_service_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'proposal_revision_service';
	
	/**
	 * Builds and returns the ProposalRevisionService domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the proposal_revision_service table
	 * @return object An instance of the ProposalRevisionService domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalRevisionService($row->proposal_revision_service_id,
																			$row->proposal_revision_id,
																			$row->service_id
																			);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object for the proposal_revision_service table
	 *
	 * @return $row object Result Select object from the Zend_Db framework for the proposal_revision_service table
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
		
		$select->from(array('prs' => 'proposal_revision_service'), array('proposal_revision_service_id', 
																							  'proposal_revision_id', 
																							  'service_id')
									  );									  
		return $select;
	}
	
	/**
	 * Finds a proposal revision service by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the proposal_revision_service table
	 */
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();
		$select->where('proposal_revision_service_id = ?', $id);
		
		return $this->getrow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the ProposalRevisionService domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
		$row = (is_null($obj->GetId())) ? $this->Insert($obj) : $this->Update($obj);
		
		$row->proposal_revision_id = $obj->GetProposalRevisionId();
		$row->service_id				= $obj->GetServiceId();
		
		$row->Save();
		
		$obj->SetProposalRevisionServiceId($row->proposal_revision_service_id);
	}
}


