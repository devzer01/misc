class Hb_Mapper_Proposal_ProposalCategories extends Hb_Mapper_Proposal_ProposalCategory 
{
	/**
	 * Find By Id
	 * 
	 * @param $id Proposal Sample Id
	 */
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();
		$select->where('proposal_sample_type_id = ?', $id);		
		return $this->getRows($select);
	}
	
	/**
	 * Build the collection
	 *
	 * @param  $rows
	 * @return Hb_App_Proposal_ProposalCategories
	 */
	protected function BuildCollection($rows)
	{
		return parent::BuildCollection($rows, 'Hb_App_Proposal_ProposalCategories');
	}
	
	/**
	 * Do Save 
	 * 
	 * @param obj
	 */
	protected function doSave(Hb_App_Object $obj)
	{
			
