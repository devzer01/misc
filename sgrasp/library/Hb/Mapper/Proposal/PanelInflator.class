class Hb_Mapper_Proposal_PanelInflator extends Hb_Mapper_Mapper 
{
	/**
	 * Domain object class name
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Proposal_PanelInflator';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Proposal_PanelInflator';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "panel_inflator_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "panel_inflator";
	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param record set $row  Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_PanelInflator($row->panel_inflator_id,
															  $row->panel_cost_type_id, 
															  $row->license_level_id,
															  $row->inflator_amount,
															  $row->effective_date, 
															  $row->expire_date);		
	}
	
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select Selected Result Set from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
		$db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select(); 
          	 	 	 	 	
		$select->from($this->table, array( 'panel_inflator_id', 	
													  'panel_cost_type_id', 	
													  'license_level_id',
													  'inflator_amount', 	
													  'effective_date', 	
													  'expire_date'
												   ));
		         
      return $select; 				
	}
	
	
	/**
	 * Finds a Panel Inflator by it's Id
	 *
	 * @param  int $id The record identifier that uniquely identifies the row.
	 * @return  Result Row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where($this->primary_key . '= ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	
	/**
	 * Saves domain object
	 *
	 * @param Hb_App_Object $obj Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{	
		/* @var $obj Hb_App_PanelInflator */
		
		$data = array('panel_cost_type_id' => $obj->GetPanelCostTypeId(),
					     'license_level_id'   => $obj->GetLicenseLevelId(),
					     'inflator_amount'    => $obj->GetInflatorAmount(),
					     'effective_date'     => $obj->GetEffectiveDate(),
					     'expire_date'  	     => $obj->GetExpireDate(),
					     ); 
		
		$db = Hb_Util_Db_Connection::GetInstance();
						
		if (is_null($obj->GetId())) 
		{
			$db->insert($this->table, $data);
			$obj->SetPanelInflatorId($db->lastInsertId());
		} 
		else 
		{
			$db->update($this->table, $data, $this->primary_key . '=' . $obj->GetId());	
		}	
	}	
}
?>