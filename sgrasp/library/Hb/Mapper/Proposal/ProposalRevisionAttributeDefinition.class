class Hb_Mapper_Proposal_ProposalRevisionAttributeDefinition extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'proposal_revision_attr_def_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'proposal_revision_attr_def';
	
	/**
	 * Builds and returns the Proposal Revision Attribute Definition domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the proposal_revision_attr_def table
	 * @return object An instance of the Proposal Revision Attribute Definition domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalRevisionAttributeDefinition($row->proposal_revision_attr_def_id,
																	   $row->proposal_revision_attr_name,
																	   $row->proposal_revision_attr_description
																	  );
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('prad' => 'proposal_revision_attr_def'), array('proposal_revision_attr_def_id',
																		   'proposal_revision_attr_name',
																		   'proposal_revision_attr_description'));
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Proposal Revision Attribute Definition by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the proposal_revision_attr_def table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('prad.' . $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the proposal_revision_attr_def domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{		 	
	 	$data  = array(
						'proposal_revision_attr_name' 			=> $obj->GetAttributeName(),
						'proposal_revision_attr_description' 	=> $obj->GetAttributeDescription()
	 				  );
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) 
	 	{
	 		$db->insert($this->table, $data);
	 		$obj->SetAttributeDefinitionId($db->lastInsertId());
	 	}
	 	else 
	 	{
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
	
}

