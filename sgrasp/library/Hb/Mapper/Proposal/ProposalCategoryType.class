class Hb_Mapper_Proposal_ProposalCategoryType extends Hb_Mapper_Mapper
{ 
  /**
   * Domain object class name
   *
   * @var string 
   */ 
   protected static $__domain = 'Hb_App_Proposal_ProposalCategoryType'; 

  /**
   * primary key of the table
   *
   * @var string 
   */
   protected $primary_key = 'proposal_category_type_id';
   
  /**
   * table name
   *
   * @var string 
   */  
   protected $table = 'proposal_category_type';
   
   /**
    * Find by id
    *
    * @param int id Proposal Category  Type Id
    * @return Hb_App_Proposal_ProposalCategoryType Returns domain object
    */ 
   protected function doFindById($id) 
   {
   	$select = $this->GetBaseSelect();	
	  	$select->where('pct.proposal_category_type_id = ?', $id);
	  
	  	return $this->getRow($select);
   } 
   
   /**
    * Prepare basic select statement
    * 
    * @return select returns select member of db connection object
    */ 
   protected function GetBaseSelect() 
   { 
    	$db = Hb_Util_Db_Connection::GetInstance();
	  
	  	$select = $db->select();
	  	$select->from(array('pct' => 'proposal_category_type'), array('proposal_category_type_id', 'proposal_category_id', 
	  	'proposal_category_type_description'));
	  
	  	return $select;
   }
   
   /**
    * Builds the domain object from the provided row
    *
    * @param Object $row Table row
    * @return Hb_App_Proposal_ProposalCategoryType Returns domain object
    */ 
   protected function doBuildObject($row)
   { 
   	return new Hb_App_Proposal_ProposalCategoryType($row->proposal_category_type_id, 
   			$row->proposal_category_type_description,
   	 		$row->proposal_category_id);
   }
   
   /**
    * Save
    *
    * @param $obj object Instance of the Hb_App_Proposal_ProposalCategoryType
    */ 
   protected function doSave(Hb_App_Object $obj)
   { 
      $data = array(
      	'proposal_category_type_description'	=> $obj->GetTypeDescription(),
      	'proposal_category_id'						=> $obj->GetProposalCategoryId());
    
      $db = Hb_Util_Db_Connection::GetInstance(); 
      
      if (is_null($obj->GetId())) {
			$db->insert('proposal_category_type', $data);
			$obj->SetTypeId($db->lastInsertId());
	  	} else {
			$db->update('proposal_category_type', $data, 'proposal_category_type_id = ' . $obj->GetId());
	  	}
   }  
}
?> 