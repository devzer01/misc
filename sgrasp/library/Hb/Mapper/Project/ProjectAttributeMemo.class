class Hb_Mapper_Project_ProjectAttributeMemo extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Project_ProjectAttributeMemo';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Project_ProjectAttributeMemo';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "pjm_attr_memo_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "pjm_attr_memo";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Project_ProjectAttributeMemo(	$row->pjm_attr_memo_id,$row->pjm_id,$row->pjm_attr_name,
														$row->pjm_attr_value );
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('pjm_attr_memo', array(	'pjm_attr_memo_id', 	
											'pjm_id',
											'pjm_attr_name',
											'pjm_attr_value'));
			return $select;													
	 
	}
	
	/**
	 * Finds a Project Attribute Memo by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('pjm_attr_memo_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	/**
	* Saves a dirty domain object to the persistence layer
	*
	* @param $obj object Instance of the relevant domain object
	*/
	protected function doSave(Hb_App_Object $obj)
	{
	
	$data = array(	'pjm_id' => $obj->GetProjectID(),
					'pjm_attr_name' => $obj->GetProjectAttributeName(),
					'pjm_attr_value' => $obj->GetProjectAttributeValue());
				 
	$db = Hb_Util_Db_Connection::GetInstance();
	
		if (is_null($obj->GetId())) 
		{
			$db->insert('pjm_attr_memo', $data);
			$obj->SetProjectAttributeMemoId($db->lastInsertId());
		}
		else 
		{
			$db->update('pjm_attr_memo', $data, 'pjm_attr_memo_id = ' . $obj->GetId());
		} 
		
	}
	
}
