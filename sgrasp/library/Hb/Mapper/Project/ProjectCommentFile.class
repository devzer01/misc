class Hb_Mapper_Project_ProjectCommentFile extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Project_ProjectCommentFile';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Project_ProjectCommentFile';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "pjm_comment_file_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "pjm_comment_file";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		$project_comment_file = new Hb_App_Common_File($row->pjm_comment_file_id,
																	  $row->file_type_id,
																	  $row->pjm_comment_file_name,
																	  $row->pjm_comment_file_title,
																	  $row->pjm_comment_file_size
																	  );
		
		return new Hb_App_Project_ProjectCommentFile($row->pjm_comment_file_id,
																	$row->pjm_comment_id,
																	$project_comment_file
																	);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('pjm_comment_file', array(
													'pjm_comment_file_id', 	
													'pjm_comment_id',
													'file_type_id',
													'pjm_comment_file_name',
													'pjm_comment_file_title',													
													'pjm_comment_file_size'
													));
		return $select;													
	 
	}
	
	/**
	 * Finds a Project Comment File by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('pjm_comment_file_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	/**
	* Saves a dirty domain object to the persistence layer
	*
	* @param $obj object Instance of the relevant domain object
	*/
	protected function doSave(Hb_App_Object $obj)
	{
	
	$data = array(
					'pjm_comment_id' 				=> $obj->GetProjectCommentId(),
					'file_type_id' 				=> $obj->GetFile()->GetFileTypeId(),
					'pjm_comment_file_name' 	=> $obj->GetFile()->GetFileName(),
					'pjm_comment_file_title' 	=> $obj->GetFile()->GetFileTitle(),
					'pjm_comment_file_data' 	=> $obj->GetFile()->GetFileData(),
					'pjm_comment_file_size' 	=> $obj->GetFile()->GetFileSize()
				 );
				 
	$db = Hb_Util_Db_Connection::GetInstance();
	
		if (is_null($obj->GetId())) 
		{
			$db->insert('pjm_comment_file', $data);
			$obj->SetProjectCommentFileId($db->lastInsertId());
		}
		else 
		{
			$db->update('pjm_comment_file', $data, 'pjm_comment_file_id = ' . $obj->GetId());
		} 
		
	}
	
}
