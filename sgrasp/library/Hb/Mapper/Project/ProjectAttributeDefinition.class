class Hb_Mapper_Project_ProjectAttributeDefinition extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'pjm_attr_def_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'pjm_attr_def';
	
	/**
	 * Builds and returns the Project Attribute Definition domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the pjm_attr_def table
	 * @return object An instance of the Project Attribute Definition domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Project_ProjectAttributeDefinition($row->pjm_attr_def_id,
																			  $row->pjm_attr_name,
																			  $row->pjm_attr_description,
																			  $row->pjm_attr_type
																			  );
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('pad' => 'pjm_attr_def'), array('pjm_attr_def_id',
																			 'pjm_attr_name',
																			 'pjm_attr_description',
																			 'pjm_attr_type')
						 );
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Proejct Attribute Definition by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the pjm_attr_def table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('pad.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the Project Attribute Definition domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Project_ProjectAttributeDefinition   */
		 	
	 	$data  = array(
			'pjm_attr_name'			=> $obj->GetAttributeName(),
			'pjm_attr_description'	=> $obj->GetAttributeDescription(),
			'pjm_attr_type'			=> $obj->GetProjectAttributeType()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetAttributeDefinitionId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
}

?>