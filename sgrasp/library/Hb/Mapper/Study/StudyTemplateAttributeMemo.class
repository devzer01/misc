class Hb_Mapper_Study_StudyTemplateAttributeMemo extends Hb_Mapper_Mapper
{
	/**
	 * Primary Key field for the Study template attribute memo
	 *
	 * @var string 
	 */	
	protected $primary_key = 'study_template_attr_memo_id';

	/**
	 * Study template attribute memo table
	 *
	 * @var string 
	 */
	protected $table = 'study_template_attr_memo';
	
	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */	
	protected static $__domain = 'Hb_App_Study_StudyTemplateAttributeMemo';

	/**
	 * Gateway class description
	 *
	 * @var string 
	 */		
	protected $__gateway = 'Hb_Db_Study_StudyTemplateAttributeMemo';
	
	/**
	 * Build the StudyTemplateAttributeMemo Object
	 *
	 * @param Zend_Db_Table $row
	 * @return Hb_App_Study_StudyTemplateAttributeMemo
	 */
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyTemplateAttributeMemo($row->study_template_attr_memo_id,
																	   	$row->study_template_id,
																	 		$row->study_attr,
																			$row->study_value);
	}
	
	/**
	 * Get the base data set for StudyTemplateAttributeMemo
	 *
	 * @return Zend_Db_Select
	 */
	protected function GetBaseSelect()
	{
		$db = Hb_Util_Db_Connection::GetInstance();
		$select = $db->select(); 
         
		$select->from(array('sqorl' => $this->table), array('study_template_attr_memo_id', 
																 	 		  'study_template_id',
																    		  'study_attr', 
																    		  'study_value'));
		return $select;	
	}
	
	/**
	 * Returns a tuple by given Study template attribute memo
	 *
	 * @return object
	 */
	protected function doFindById($id)
	{		
		$select = $this->GetBaseSelect();        
		$select->where('sqorl.'. $this->primary_key . '= ?', $id);				

		return $this->getRow($select);		
	}
	
	/**
	 * Return the Study template attribute memo
	 *
	 * @param Hb_App_Object StudyTemplateAttributeMemo
	 * @return object Study template attribute memo
	 */
	protected function doSave(Hb_App_Object $obj)
	{
		$data = array(
							'study_template_id' 				=> $obj->GetStudyTemplateId(),
							'study_attr' 						=> $obj->GetStudyAttribute(),
							'study_value' 						=> $obj->GetStudyValue()
						 );
				 
		$db = Hb_Util_Db_Connection::GetInstance();
	
		if (is_null($obj->GetId())) 
		{
			$db->insert($this->table, $data);
			$obj->SetStudyTemplateAttributeMemoId($db->lastInsertId());
		}
		else 
		{
			$db->update($this->table, $data, $this->primary_key . ' = ' . $obj->GetId());
		} 
	  
	}

} 
