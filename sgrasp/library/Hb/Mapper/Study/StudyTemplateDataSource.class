class Hb_Mapper_Study_StudyTemplateDataSource extends Hb_Mapper_Mapper
{
	/**
	 * Variable for the Primary Key Field of Study Template Datasource table
	 *
	 * @var int 
	 */	
	protected $primary_key = 'study_template_datasource_id';
	
	/**
	 * Variable for Study Template Datasource table
	 *
	 * @var string 
	 */	
	protected $table = 'study_template_datasource';
	
	/**
	 * Build the StudyTemplateDataSource Object
	 *
	 * @param Zend_Db_Table $row
	 * @return Hb_App_Study_StudyTemplateDataSource
	 */
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyTemplateDataSource
		(	$row->study_template_datasource_id,
			$row->study_template_id,			
			$row->study_datasource_id	);
	}
	
	/**
	 * Returns Study Template Datasource data
	 * 
	 * @return Zend_Db_Select
	 */
	protected function GetBaseSelect()
	{
		$db = Hb_Util_Db_Connection::GetInstance();
		$select = $db->select();
		$select->from(array('st' => 'study_template_datasource'), 
							array(	'study_template_datasource_id',
										'study_template_id',
										'study_datasource_id' )
									);
		return $select;
	}
	
	/**
	 * Returns a row by id
	 * 
	 * @return object
	 */
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();		
		$select->where('st.study_template_datasource_id = ?', $id);
				
		return $this->getRow($select);
	}
		
	/**
	 * Saving Data
	 *
	 * @param Hb_App_Object $obj Instance of a HB app object 
	 * @return object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
		// @var $obj Hb_App_Study_StudyTemplateDataSource  
		
		$data = array(
			'study_template_id'		=> $obj->GetStudyTemplateId(),
			'study_datasource_id'	=> $obj->GetStudyDatasourceId());

		$db = Hb_Util_Db_Connection::GetInstance();
					
		if (is_null($obj->GetId())) 
		{
			$db->insert('study_template_datasource', $data);
			$obj->SetStudyTemplateDataSourceId($db->lastInsertId());
		}
		else 
		{
			$db->update('study_template_datasource', $data, 'study_template_datasource_id = ' . $obj->GetId());	
		}
	}
}
?>