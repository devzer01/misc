class Hb_Mapper_Study_StudyAccount extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Study_StudyAccount';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Study_StudyAccount';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "study_account_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "study_account";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyAccount($row->study_account_id,$row->study_id,$row->account_id,
											 $row->account_name , $row->account_type_id,$row->account_sub_type_id);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('study_account', array(
													'study_account_id', 	
													'study_id',
													'account_id',
													'account_name',
													'account_type_id',
													'account_sub_type_id'));
		return $select;													
	 
	}
	
	/**
	 * Finds a Study Account by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('study_account_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	/**
	* Saves a dirty domain object to the persistence layer
	*
	* @param $obj object Instance of the relevant domain object
	*/
	protected function doSave(Hb_App_Object $obj)
	{
	
	$data = array(
					'study_id' => $obj->GetStudyId(),
					'account_id' => $obj->GetAccountId(),
					'account_name' => $obj->GetAccountName(),
					'account_type_id' => $obj->GetAccountTypeId(),
					'account_sub_type_id' => $obj->GetAccountSubTypeId());
				 
	$db = Hb_Util_Db_Connection::GetInstance();
	
		if (is_null($obj->GetId())) 
		{
			$db->insert('study_account', $data);
			$obj->SetStudyAccountId($db->lastInsertId());
		}
		else 
		{
			$db->update('study_account', $data, 'study_account_id = ' . $obj->GetId());
		} 
		
	}
	
}
