class Hb_Mapper_Training_TaskType extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'task_type_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'task_type';
	
	
	/**
	 * Builds and returns the Task Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the task_type table
	 * @return object An instance of the Task Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Training_TaskType($row->task_type_id,
												 	   $row->task_type
												 	  );
	} 
	
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('tt' => 'task_type'), array('task_type_id',
																		'task_type')
						 );
	 	
	 	return $select;
	}
	
	
	/**
	 * Finds a Task Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the task_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('tt.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	
	/**
	 * Saves domain object
	 *
	 * @param Hb_App_Object $obj object Instance of the task_type domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_task_TaskType   */
		 	
	 	$data  = array('task_type' => $obj->GetTypeDescription());
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}	
}
?>