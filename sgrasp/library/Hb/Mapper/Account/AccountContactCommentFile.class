class Hb_Mapper_Account_AccountContactCommentFile extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Account_AccountContactCommentFile';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Account_AccountContactCommentFile';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "account_contact_comment_file_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "account_contact_comment_file";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		$file =  new Hb_App_Common_File($row->account_contact_comment_file_id, $row->file_type_id, 
				$row->file_name, $row->file_title, $row->file_size);
		
		return new Hb_App_Account_AccountContactCommentFile($row->account_contact_comment_file_id, $row->account_contact_comment_id, $file);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('account_contact_comment_file', array(
													'account_contact_comment_file_id', 	
													'account_contact_comment_id',
													'file_type_id',
													'file_name',
													'file_title',
													'file_size'));
		return $select;													
	 
	}
	
	/**
	 * Finds a Account Contact Comment File by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('account_contact_comment_file_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	/**
	* Saves a dirty domain object to the persistence layer
	*
	* @param $obj object Instance of the relevant domain object
	*/
	protected function doSave(Hb_App_Object $obj)
	{
		$data = array(
					'account_contact_comment_id' 	=> $obj->GetAccountContactCommentId(),
					'file_type_id' 					=> $obj->GetFile()->GetFileTypeId(),
					'file_name' 						=> $obj->GetFile()->GetFileName(),
					'file_title' 						=> $obj->GetFile()->GetFileTitle(),
					'file_data' 						=> $obj->GetFile()->GetFileData(),
					'file_size' 						=> $obj->GetFile()->GetFileSize());
				 
		$db = Hb_Util_Db_Connection::GetInstance();
	
		if (is_null($obj->GetId())) 
		{
			$db->insert('account_contact_comment_file', $data);
			$obj->SetAccountContactCommentFileId($db->lastInsertId());
		}
		else 
		{
			$db->update('account_contact_comment_file', $data, 'account_contact_comment_file_id = ' . $obj->GetId());
		} 
		
	}
}
?>