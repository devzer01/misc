class Hb_Mapper_Account_AccountCountry extends Hb_Mapper_Mapper
{
	/**
	 * Variable for the Primary Key Field of Account Country table
	 *
	 * @var int 
	 */	
	protected $primary_key = 'partner_country_id';
	
	/**
	 * Variable for AccountCountry table
	 *
	 * @var string 
	 */	
	protected $table = 'partner_country';
	
	/**
	 * Build the AccountCountry Object
	 *
	 * @param Zend_Db_Table $row
	 * @return Hb_App_Account_AccountCountry
	 */
	protected function doBuildObject($row)
	{
		return new Hb_App_Account_AccountCountry
		(	$row->partner_country_id,
			$row->partner_id,
			$row->country_code,
			$row->country_tier_id );
	}
	
	/**
	 * Returns Account Country data
	 * 
	 * @return Zend_Db_Select
	 */
	protected function GetBaseSelect()
	{
		$db = Hb_Util_Db_Connection::GetInstance();
		$select = $db->select();
		$select->from(array('ac' => 'partner_country'), 
							array(	'partner_country_id', 
										'partner_id', 
										'country_code', 
										'country_tier_id'	)
									);
		return $select;
	}
	
	/**
	 * Returns a row by id
	 * 
	 * @return object
	 */
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();		
		$select->where('ac.partner_country_id = ?', $id);
				
		return $this->getRow($select);
	}
		
	/**
	 * Saving Data
	 *
	 * @param Hb_App_Object $obj Instance of a HB app object 
	 * @return object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
		// @var $obj Hb_App_Account_AccountCountry  
		$data = array(
			'partner_id' 				=> $obj->GetAccountId(),
			'country_code' 			=> $obj->GetCountryCode(),
			'country_tier_id' 		=> $obj->GetCountryTierId());

		$db = Hb_Util_Db_Connection::GetInstance();
					
		if (is_null($obj->GetId())) 
		{
			$db->insert('partner_country', $data);
			$obj->SetAccountCountryId($db->lastInsertId());
		}
		else 
		{
			$db->update('partner_country', $data, 'partner_country_id = ' . $obj->GetId());	
		}
	}
}
?>