class Hb_Mapper_Account_AccountContactCommentAttribute extends Hb_Mapper_Mapper 
{

	/**
	 * Primary key for account_contact_comment_attr table
	 *
	 * @var string
	 */
	protected $primary_key = 'account_contact_comment_attr_id';
	
	/**
	 * Table name account_contact_comment_attr
	 *
	 * @var string
	 */
	protected $table = 'account_contact_comment_attr';
	
	/**
	 * Builds the AccountContactCommentAttribute Object
	 *
	 * @param Zend/Db select Object $row
	 * @return object Hb_App_Account_AccountContactCommentAttribute
	 */
	protected function doBuildObject($row)
	{
		return new Hb_App_Account_AccountContactCommentAttribute(
																	$row->account_contact_comment_attr_id,
																	$row->account_contact_comment_id,
																	$row->account_contact_comment_attr_name,
																	$row->account_contact_comment_attr_value
																);
	}
	
	/**
	 * Returns the base select for Hb_App_Account_AccountContactCommentAttribute
	 *
	 * @return Zend/DB select Object
	 */
	protected function GetBaseSelect()
	{
		$db = Hb_Util_Db_Connection::GetInstance();
		$select = $db->select();
		
		$select->from(
						array('acca' => 'account_contact_comment_attr'),
						array(
								'account_contact_comment_attr_id' , 
								'account_contact_comment_id' , 
								'account_contact_comment_attr_name' , 
								'account_contact_comment_attr_value'
							)
						);
						
		return $select;
	}

	/**
	 * Find the Account Contact Comment Attribute by Id
	 *
	 * @param int $id
	 * @return Zend/DB row Object
	 */
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();
		$select->where('acca.account_contact_comment_attr_id = ?', $id);
		
		return $this->getRow($select);		
	}
	
	/**
	 * Save Hb_App_Account_AccountContactCommentAttribute Object
	 *
	 * @param Hb_App_Object $obj
	 */
	protected function doSave(Hb_App_Object $obj)
	{
		require_once('class/Hb/Util/Db/Query.class');
		
		$db = Hb_Util_Db_Query::getInstance();

		if (is_null($obj->GetId())) 
		{
			$query = "INSERT INTO account_contact_comment_attr (account_contact_comment_id, account_contact_comment_attr_name, account_contact_comment_attr_value ) "
               			. "VALUES (" . $obj->GetAccountContactCommentId() . ", '" . $db->escapeString($obj->GetAttributeName()) . "', '" . $db->escapeString($obj->GetAttributeValue()) . "')";
			
			$db->q($query);
			
			$obj->SetAccountContactCommentAttrId($db->getLastInsertId());			
			
		} 
		else
		{
			$query = "UPDATE account_contact_comment_attr "
						. "SET account_contact_comment_id = " . $obj->GetAccountContactCommentId() . ", "
							. " account_contact_comment_attr_name = '" . $db->escapeString($obj->GetAttributeName()) . "', "
							. " account_contact_comment_attr_value = '" . $db->escapeString($obj->GetAttributeValue()) . "' "
						. "WHERE account_contact_comment_attr_id = " . $obj->GetId();

			$db->q($query);
		}

	}

}
