class Hb_Mapper_Account_Recruiter_Demographic extends Hb_Mapper_Mapper
{ 
  /**
   * Domain object class name
   *
   * @var string 
   */ 
   protected static $__domain = 'Hb_App_Account_Recruiter_Demographic'; 

  /**
   * primary key of the table
   *
   * @var string 
   */
   protected $primary_key = 'account_recruiter_demographic_id';
   
  /**
   * table name
   *
   * @var string 
   */  
   protected $table = 'account_recruiter_demographic';
   
   /**
    * Find by id
    *
    * @param int id Demographic  Id
    * @return Hb_App_Account_Recruiter_Demographic returns domain object
    */ 
   protected function doFindById($id) 
   {
   	$select = $this->GetBaseSelect();	
	  	$select->where('ard.account_recruiter_demographic_id = ?', $id);
		$select->where('status = ? ', 'A');
	  
	  	return $this->getRow($select);
   } 
   
   /**
    * Prepare basic select statement
    * 
    * @return select returns select member of db connection object
    */ 
   protected function GetBaseSelect() 
   { 
    	$db = Hb_Util_Db_Connection::GetInstance();
	  
	  	$select = $db->select();
	  	$select->from(array('ard' => $this->table), array('account_recruiter_demographic_id', 'account_recruiter_demographic_description'
	  	));
		$select->where('status = ? ', 'A');

	  	return $select;
   }
   
   /**
    * Builds the domain object from the provided row
    *
    * @param Object $row Table row
    * @return Hb_App_Account_Recruiter_Demographic Returns domain object
    */ 
   function doBuildObject($row)
   { 
//   	print('********************') ;
//   	print($row) ;
//   	die('***********88');
   	return new Hb_App_Account_Recruiter_Demographic
   							(
					   			$row->account_recruiter_demographic_id, 
					   			$row->account_recruiter_demographic_description
					 	 	   );
   }
   
   /**
    * Save
    *
    * @param $obj object Instance of the Hb_App_Account_Recruiter_Demographic
    */ 
   function doSave(Hb_App_Object $obj)
   { 
      $data = array(
				      	'account_recruiter_demographic_description' 	=> $obj->GetRecruiterDemographicDescription(),
				       );
    
      $db = Hb_Util_Db_Connection::GetInstance(); 
      
      if (is_null($obj->GetId())) {
			$db->insert($this->table, $data);
			$obj->SetRecruiterDemographicId($db->lastInsertId());
	  	} else {
			$db->update($this->table, $data, $this->primary_key . '=' . $obj->GetId());
	  	}
   }  
}
?> 
