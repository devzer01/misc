class Hb_App_Account_Recruiter_Recruiter extends Hb_App_Account_Account 
{
	/**
	 * Recruiter Campaigns Collect instance
	 *
	 * @var Hb_App_Account_Recruiter_Campaings 
	 */
	private $recruiter_campaigns = null;
	
	/**
	 * Construct method of the Recruiter Doamin
	 *
	 * @param Row object $row
	 */
	function __construct($id , $name, $country, $type, $sub_type, $account_status_id = null)
	{
		parent::__construct($id , $name, $country, $type, $sub_type, $account_status_id);
	}
	
	/**
	 * Check whether Demographic type is set to this account
	 * 
	 */
	public function IsDemographicTypeSet($type_id) 
	{
		$demographic_types = Hb_App_ObjectHelper::GetMapper('Hb_App_Account_Recruiter_CampaignDemographics')->FindByAccountId($this->account_id);
		
		foreach ($demographic_types as $demographic_type) {
			if($type_id == $demographic_type->GetRecruiterCampaignDemographicTypeId()) {
				return true;
			}
		}
		
		return false;
	}
	
	
}

