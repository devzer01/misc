class Hb_Mapper_Proposal_ProposalRevisionReviewLog extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Proposal_ProposalRevisionReviewLog';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Proposal_ProposalRevisionReviewLog';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "proposal_revision_review_log_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "proposal_revision_review_log";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalRevisionReviewLog($row->proposal_revision_review_log_id,$row->proposal_revision_id,$row->proposal_review_group_id,$row->login,$row->notification_sent_date);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('proposal_revision_review_log', array(
													'proposal_revision_review_log_id', 	
													'proposal_revision_id',
													'proposal_review_group_id',
													'login',
													'notification_sent_date'
													));
		return $select;													
	 
	}
	
	/**
	 * Finds a proposal_revision_review_log by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('proposal_revision_review_log_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}

	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{
		
		if (is_null($obj->GetId())) $row = $this->Insert($obj); else $row = $this->Update($obj);
		
		$row->proposal_revision_id   = $obj->GetProposalRevisionId();
		$row->proposal_review_group_id = $obj->GetProposalReviewGroupId();
		$row->proposal_review_group_id = $obj->GetProposalReviewGroupId();
		$row->login = $obj->GetLogin();
		$row->notification_sent_date = $obj->GetNotificationSentDate();
		
		$row->save();				
		$obj->SetProposalRevisionReviewLogId($row->proposal_revision_review_log_id);				
	}	
	
}
