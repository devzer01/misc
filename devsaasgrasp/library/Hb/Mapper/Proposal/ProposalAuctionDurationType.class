class Hb_Mapper_Proposal_ProposalAuctionDurationType extends Hb_Mapper_Mapper 
{
	/**
	 * primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'proposal_auction_duration_type_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table	= 'proposal_auction_duration_type';
	
	/**
	 * Builds and returns the Proposal Auction Duration Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the proposal_auction_duration_type table
	 * @return object An instance of the Proposal Auction Duration Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalAuctionDurationType($row->proposal_auction_duration_type_id,
											 									 $row->duration,
											 									 $row->proposal_auction_duration_type_description
											 									 );
	}

	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('padt' => 'proposal_auction_duration_type'), array('proposal_auction_duration_type_id',
																			  						  'proposal_auction_duration_type_description',
																			  						  'duration')
						  );
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Proposal Auction Duration Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the proposal_auction_duration_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('padt.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the Proposal Auction Duration domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Proposal_ProposalAuctionDurationType   */
		 	
	 	$data  = array(
			'proposal_auction_duration_type_description' => $obj->GetTypeDescription(),
			'duration'												=> $obj->GetProposalAuctionDuration()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
}

