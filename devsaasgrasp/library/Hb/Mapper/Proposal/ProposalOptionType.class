class Hb_Mapper_Proposal_ProposalOptionType extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'proposal_option_type_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'proposal_option_type';
	
	/**
	 * Builds and returns the Proposal Option Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the proposal_option_type table
	 * @return object An instance of the Proposal Option Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalOptionType($row->proposal_option_type_id, $row->proposal_option_type_description);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('pot' => 'proposal_option_type'), array('proposal_option_type_id',
																				  		'proposal_option_type_description')
						 );
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Proposal Option Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the proposal_option_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('pot.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the Proposal Option Type domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Proposal_ProposalOptionType   */
		 	
	 	$data  = array(
			'proposal_option_type_description'	=> $obj->GetTypeDescription()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
	
}

?>