class Hb_Mapper_Proposal_ProposalType extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key for proposal_type
	 *
	 * @var string 
	 */
	protected $primary_key = 'proposal_type_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'proposal_type';
	
	/**
	 * Builds and returns the Proposal Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the proposal_type table
	 * @return object An instance of the Proposal Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalType($row->proposal_type_id, $row->proposal_type_description);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('pt' => 'proposal_type'), array('proposal_type_id',
																			 'proposal_type_description')
						 );
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Proposal Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the proposal_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('pt.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the proposal_type domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	$data  = array(
			'proposal_type_description' => $obj->GetTypeDescription()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) 
	 	{
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}
	 	else 
	 	{
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
	
}

