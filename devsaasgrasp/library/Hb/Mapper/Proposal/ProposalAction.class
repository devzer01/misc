class Hb_Mapper_Proposal_ProposalAction extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Proposal_ProposalAction';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Proposal_ProposalAction';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "proposal_action_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "proposal_action";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Proposal_ProposalAction($row->proposal_action_id,$row->proposal_action_description);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('proposal_action', array(
													'proposal_action_id', 	
													'proposal_action_description'));
		return $select;													
	 
	}
	
	/**
	 * Finds a proposal_action by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('proposal_action_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}

	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{
		
		if (is_null($obj->GetId())) $row = $this->Insert($obj); else $row = $this->Update($obj);
		
		$row->proposal_action_description   = $obj->GetProposalActionDescription();
		
		$row->save();				
		$obj->SetProposalActionId($row->proposal_action_id);				
	}	
	
}
?>