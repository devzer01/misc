class Hb_Mapper_Common_SampleType extends Hb_Mapper_Mapper  
{
   /**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'sample_type_id';
   
  /**
   * Table name
   *
   * @var string 
   */  
   protected $table = 'sample_type';
   
	/**
	 * Builds and returns the Sample Type domain object
	 *
	 * @param $row $object Result row from the Zend_Db framework for sample_type table
	 * @return object An instance of the Sample Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Common_SampleType(
														$row->sample_type_id,
														$row->sample_type_description
														);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	
		$select->from(array('st' => 'sample_type'),
	 					array('sample_type_id',
							  	'sample_type_description'
							  )
						 );
	 	return $select;
	}
	
	/**
	 * Returns a tuple by given Sample Type
	 *
	 * @return object
	 */
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		
	 	$select->where('st.sample_type_id = ?', $id);					 	
		
	 	return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{				
 		/* @var $obj Hb_App_Common_SampleType   */

 		$data = array(
			'sample_type_description' => $obj->GetTypeDescription()
			);
		
		$db = Hb_Util_Db_Connection::GetInstance();
						
		if (is_null($obj->GetId())) 
		{
			$db->insert('sample_type', $data);
			$obj->SetTypeId($db->lastInsertId());
		} 
		else 
		{
			$db->update('sample_type', $data, 'sample_type_id = ' . $obj->GetId());	
		}
	}
}
?>
