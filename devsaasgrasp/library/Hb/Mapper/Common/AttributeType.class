class Hb_Mapper_Common_AttributeType extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'attribute_type_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'attribute_type';
	
	/**
	 * Builds and returns the Attribute Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the attribute_type table
	 * @return object An instance of the Attribute Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		//$type_object = new Hb_App_Common_Type($row->attribute_type_id, $row->attribute_type_description);
		
		return new Hb_App_Common_AttributeType($row->attribute_type_id,
															$row->attribute_type,
															$row->attribute_type_description
																	);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('at' => 'attribute_type'), array('attribute_type_id',
	 																			'attribute_type',
																				'attribute_type_description')
						 );
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Attribute Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the attribute_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('at.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the attribute_type domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Common_AttributeType   */
		 	
	 	$data  = array(
	 		'attribute_type' => $obj->GetAttributeType(),
			'attribute_type_description' => $obj->GetTypeDescription()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
}

?>