class Hb_Mapper_Account_Recruiter_CampaignDemographic extends Hb_Mapper_Mapper
{ 
  /**
   * Domain object class name
   *
   * @var string 
   */ 
   protected static $__domain = 'Hb_App_Account_Recruiter_CampaignDemographic'; 

  /**
   * primary key of the table
   *
   * @var string 
   */
   protected $primary_key = 'account_recruiter_campaign_demographic_id';
   
  /**
   * table name
   *
   * @var string 
   */  
   protected $table = 'account_recruiter_campaign_demographic';
   
   /**
    * Find by id
    *
    * @param int id Campaign Demographic  Id
    * @return Hb_App_Account_Recruiter_CampaignDemographic returns domain object
    */ 
   protected function doFindById($id) 
   {
   	$select = $this->GetBaseSelect();	
	  	$select->where('ard.account_recruiter_campaign_demographic_id = ?', $id);
	  
	  	return $this->getRow($select);
   } 
   
   /**
    * Prepare basic select statement
    * 
    * @return select returns select member of db connection object
    */ 
   protected function GetBaseSelect() 
   { 
    	$db = Hb_Util_Db_Connection::GetInstance();
	  
	  	$select = $db->select();
	  	$select->from(array('ard' => $this->table), array('account_recruiter_campaign_demographic_id','account_id','account_recruiter_demographic_type_id', 'status'
	  	));

	  	return $select;
   }
   
   /**
    * Builds the domain object from the provided row
    *
    * @param Object $row Table row
    * @return Hb_App_Account_Recruiter_CampaignDemographic Returns domain object
    */ 
   function doBuildObject($row)
   { 
   	return new Hb_App_Account_Recruiter_CampaignDemographic
   							(
   								$row->account_recruiter_campaign_demographic_id, 
					   			$row->account_id, 
					   			$row->account_recruiter_demographic_type_id
					 	 		);
   }
   
   /**
    * Save
    *
    * @param $obj object Instance of the Hb_App_Account_Recruiter_CampaignDemographic
    */ 
   function doSave(Hb_App_Object $obj)
   { 
      $data = array(
				      	'account_id' 									 => $obj->GetRecruiterAccountId(),
      					'account_recruiter_demographic_type_id' => $obj->GetRecruiterCampaignDemographicTypeId(),
      					'status'											 => $obj->GetStatus(),
				       );
    
      $db = Hb_Util_Db_Connection::GetInstance(); 
      
      if (is_null($obj->GetId())) {
			$db->insert($this->table, $data);
			$obj->SetRecruiterCampaignDemographicId($db->lastInsertId());
	  	} else {
			$db->update($this->table, $data, $this->primary_key . '=' . $obj->GetId());
	  	}
   }  
}
