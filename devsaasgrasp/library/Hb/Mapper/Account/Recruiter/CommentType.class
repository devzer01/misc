class Hb_Mapper_Account_Recruiter_CommentType extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key for this table
	 *
	 * @var string
	 */
	protected $primary_key = 'account_recruiter_comment_type_id';
	
	/**
	 * Table name for this table
	 *
	 * @var string
	 */
	protected $table = 'account_recruiter_campaign_comment_type';
	
	/**
	 * Builds and returns the Recruiter Comment Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the account_recruiter_campaign_comment_type table
	 * @return object An instance of the Recruiter Comment Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Account_Recruiter_CommentType($row->account_recruiter_comment_type_id,
																		$row->recruiter_comment_type 
																		);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('rccy' =>$this->table), array('account_recruiter_comment_type_id',
	 												 					  'recruiter_comment_type'));
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Recruiter Comment Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the account_recruiter_campaign_comment_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('rccy.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the Recruiter Comment Type domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Account_Recruiter_CommentType   */
		 	
	 	$data  = array(
			'recruiter_comment_type'	=> $obj->GetTypeDescription()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
}

?>