class Hb_Mapper_Account_AccountPanelGroup extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'account_panel_group_id';
	
	/**
	 * table name
	 *
	 * @var string 
	 */
	protected $table = 'account_panel_group';
	
	/**
	 * Builds and returns the Account Panel Group domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the account_panel_group table
	 * @return object An instance of the Account Panel Group domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Account_AccountPanelGroup($row->account_panel_group_id,
																  $row->account_panel_group_description,
																  $row->sample_type_id
																  );
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
	 	$db 		= Hb_Util_Db_Connection::GetInstance();
	 	$select 	= $db->select();
	 	
	 	$select->from(array('apg'	=> $this->table), array('sample_type_id',
																			'account_panel_group_id',
																			'account_panel_group_description')
							);
									 
		return $select;
	}
	
	/**
	 * Finds a Account Panel Group by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the account_panel_group table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
	 	$select->where('apg.'. $this->primary_key. '= ?', $id);
	 	
	 	return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the Account Panel Group domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
	 	/* @var $obj Hb_App_Account_AccountPanelGroup */
	 	
	 	$data = array(
	 		'sample_type_id'							=> $obj->GetSampleTypeId(),
	 		'account_panel_group_description'	=> $obj->GetAccountPanelGroupDescription()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) {
	 		$db->insert($this->table, $data);
	 		$obj->SetAccountPanelGroupId($db->lastInsertId());
	 	}else {
	 		$db->update($this->table, $data, $this->primary_key. '='. $obj->GetId());
	 	}
	}	
}
?>