class Hb_Mapper_Account_AccountMergeAttributeDefinition extends Hb_Mapper_Mapper
{ 
  /**
   * Domain object class name
   *
   * @var string 
   */ 
   protected static $__domain = 'Hb_App_Account_AccountMergeAttributeDefinition'; 

  /**
   * primary key of the table
   *
   * @var string 
   */
   protected $primary_key = 'account_merge_attr_def_id';
   
  /**
   * table name
   *
   * @var string 
   */  
   protected $table = 'account_merge_attr_def';
   
   /**
    * Find by id
    *
    * @param int id Account Merge Attribute Definition Id
    * @return Hb_App_Account_AccountMergeAttributeDefinition Returns domain object
    */ 
   protected function doFindById($id) 
   {
   	$select = $this->GetBaseSelect();	
	  	$select->where('amad.account_merge_attr_def_id = ?', $id);
	  
	  	return $this->getRow($select);
   } 
   
   /**
    * Prepare basic select statement
    * 
    * @return select returns select member of db connection object
    */ 
   protected function GetBaseSelect() 
   { 
    	$db = Hb_Util_Db_Connection::GetInstance();
	  
	  	$select = $db->select();
	  	$select->from(array('amad' => 'account_merge_attr_def'), array('account_merge_attr_def_id', 'account_merge_attr_name', 
	  																						'account_merge_attr_description'));
	  
	  	return $select;
   }
   
   /**
    * Builds the domain object from the provided row
    *
    * @param Object $row Table row
    * @return Hb_App_Account_AccountMergeAttributeDefinition Returns domain object
    */ 
   function doBuildObject($row)
   { 
   	return new Hb_App_Account_AccountMergeAttributeDefinition(	$row->account_merge_attr_def_id, $row->account_merge_attr_name,
   																					$row->account_merge_attr_description);
   }
   
   /**
    * Save
    *
    * @param $obj object Instance of the Hb_App_Account_AccountMergeAttributeDefinition
    */ 
   function doSave(Hb_App_Object $obj)
   { 
      $data = array(
      	'account_merge_attr_name'			=> $obj->GetAttributeName(),
      	'account_merge_attr_description'	=> $obj->GetAttributeDescription());
    
      $db = Hb_Util_Db_Connection::GetInstance(); 
      
      if (is_null($obj->GetId())) {
			$db->insert('account_merge_attr_def', $data);
			$obj->SetAttributeDefinitionId($db->lastInsertId());
	  	} else {
			$db->update('account_merge_attr_def', $data, 'account_merge_attr_def_id = ' . $obj->GetId());
	  	}
   }  
}
?>