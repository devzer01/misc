class Hb_Mapper_Account_AccountType extends Hb_Mapper_Mapper  
{
   /**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'account_type_id';
   
  /**
   * Table name
   *
   * @var string 
   */  
   protected $table = 'account_type';
   
	/**
	 * Builds and returns the Account Type domain object
	 *
	 * @param $row $object Result row from the Zend_Db framework for account_type table
	 * @return object An instance of the Account Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Account_AccountType(
															$row->account_type_id,
															$row->account_type_description
															);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('at' => 'account_type'),
	 					array('account_type_id',
							  'account_type_description'
							  )
						 );
	 	return $select;
	}
	
	/**
	 * Returns a tuple by given Account Type
	 *
	 * @return object
	 */
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('at.account_type_id = ?', $id);					 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param $obj object Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{				
 		/* @var $obj Hb_App_Account_AccountType   */

 		$data = array(
			'account_type_description' => $obj->GetTypeDescription()
			);
		
		$db = Hb_Util_Db_Connection::GetInstance();
						
		if (is_null($obj->GetId())) 
		{
			$db->insert('account_type', $data);
			$obj->SetTypeId ($db->lastInsertId());
		} 
		else 
		{
			$db->update('account_type', $data, 'account_type_id = ' . $obj->GetId());	
		}
	}
}
?>
