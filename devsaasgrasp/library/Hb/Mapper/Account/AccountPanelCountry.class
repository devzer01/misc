class Hb_Mapper_Account_AccountPanelCountry extends Hb_Mapper_Mapper 
{
	/**
	 * Domain object class name
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Account_AccountPanelCountry';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Account_AccountPanelCountry';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "account_panel_country_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "account_panel_country";	
	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param record set $row  Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Account_AccountPanelCountry($row->account_panel_country_id,
																    $row->account_id, 
																    $row->country_code,
																    $row->panel_count,
																    $row->response_rate);		
	}
	
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select Selected Result Set from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
		$db     = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();           	 	 	 	 	
		$select->from($this->table, array('account_panel_country_id', 	
													 'account_id', 	
													 'country_code',
													 'panel_count',
													 'response_rate'
												   ));		         
      return $select; 				
	}
	
	
	/**
	 * Finds a Account Panel Country  by it's Id
	 *
	 * @param  int $id The record identifier that uniquely identifies the row.
	 * @return  Result Row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where($this->primary_key . '= ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	
	/**
	 * Saves domain object
	 *
	 * @param Hb_App_Object $obj Instance of the relevent domain object
	 */				
	protected function doSave(Hb_App_Object $obj)
	{	
		/* @var $obj Hb_App_Account_AccountPanelCountry */
				
		$data = array('account_id'   => $obj->GetAccountId (),
					     'country_code' => $obj->GetCountryCode(),
					     'panel_count'  => $obj->GetPanelCount(),
					     'response_rate'=> $obj->GetResponseRate()
					    );
		
		$db = Hb_Util_Db_Connection::GetInstance();
						
		if (is_null($obj->GetId())) 
		{
			$db->insert($this->table, $data);
			$obj->SetAccountPanelCountryId($db->lastInsertId());
		} 
		else 
		{
			$db->update($this->table, $data, $this->primary_key . '=' . $obj->GetId());	
		}	
	}	
}
?>