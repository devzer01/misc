class Hb_Mapper_Billing_TaxCodeCountry extends Hb_Mapper_Mapper 
{
	/**
	 * Class description
	 *
	 * @var string 
	 */
	protected $__gateway = 'Hb_Db_Billing_TaxCodeCountry';

	/**
	 * Domain for this mapper
	 *
	 * @var string 
	 */		
	protected static $__domain  = 'Hb_App_Billing_TaxCodeCountry';

	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = "tax_code_country_id";

	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table = "tax_code_country";	
	
	/**
	 * Builds and returns the relevent domain object for this mapper
	 *
	 * @param $row $obj Result row from the Zend_Db framework 
	 * @return obj An instance of the relevent domain object
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Billing_TaxCodeCountry($row->tax_code_country_id,$row->tax_code_id,$row->country_code);
	}
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $row object Result Select object from the Zend_Db framework 
	 */	
	protected function GetBaseSelect()
	{
	  $db = Hb_Util_Db_Connection::GetInstance(); 
      $select = $db->select();
      $select->from('tax_code_country', array(
													'tax_code_country_id', 	
													'tax_code_id',
													'country_code'));
		return $select;													
	 
	}
	
	/**
	 * Finds a Tax Code Country by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework 
	 */			
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();        
    	$select->where('tax_code_country_id = ?', $id);				
             
    	return $this->getRow($select); 						
	}
	
	/**
	* Saves a dirty domain object to the persistence layer
	*
	* @param $obj object Instance of the relevant domain object
	*/
	protected function doSave(Hb_App_Object $obj)
	{
	
	$data = array(
					'tax_code_id' => $obj->GetTaxCodeId(),
					'country_code' => $obj->GetCountryCode());
				 
	$db = Hb_Util_Db_Connection::GetInstance();
	
		if (is_null($obj->GetId())) 
		{
			$db->insert('tax_code_country', $data);

			$obj->SetTaxCodeCountryId($db->lastInsertId());
		}
		else 
		{
			$db->update('tax_code_country', $data, 'tax_code_country_id = ' . $obj->GetId());
		} 
		
	}
	
}
?>