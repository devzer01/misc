class Hb_Mapper_Study_StudyCostComments extends Hb_Mapper_Mapper
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'study_cost_comment_id';	
	
	/**
	 * Table name
	 *
	 * @var string 
	 */	
	protected $table       = 'study_cost_comment';	
	
	/**
	 * Finds Study Costs Comment by Study Cost Id
	 *
	 * @param  int $id Study Id
	 * @return  Result Rows from the Zend_Db framework 
	 */
	protected function doFindById($id)
	{	
		$select = $this->GetBaseSelect();
		$select->where('study_cost_id = ?', $id);

		return $this->getRows($select);
	}	
	
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyCostComment($row->study_cost_comment_id,
													 $row->study_cost_id,
													 $row->study_comment_type_id,
													 $row->study_cost_comment_date,
													 $row->study_cost_comment_text,
													 $row->status,
													 $row->created_by);
	}
	
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('scc' => $this->table), array('study_cost_comment_id',
																		 'study_cost_id',
																		 'study_comment_type_id',
																		 'study_cost_comment_date',
																		 'study_cost_comment_text',
	 	                                                 'status',
	 	                                                 'created_by'
																		 )
									);
	 	
	 	return $select;
	}
	
	protected function doSave(Hb_App_Object $obj)
	{
		
	}
}
