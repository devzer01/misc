class Hb_Mapper_Study_StudyTimeLineAttributeDefinition extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'study_timeline_attr_def_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'study_timeline_attr_def';
	
	/**
	 * Builds and returns the Study Time Line Attribute Definition domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the study_timeline_attr_def table
	 * @return object An instance of the Study Time Line Attribute Definition domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyTimeLineAttributeDefinition($row->study_timeline_attr_def_id,
																					$row->study_timeline_attr,
																					$row->study_timeline_attr_description,
																					$row->attribute_type
																					);
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('stad' => 'study_timeline_attr_def'), array('study_timeline_attr_def_id',
																							 'study_timeline_attr',
																							 'study_timeline_attr_description',
																							 'attribute_type'));
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Study Time Line Attribute Definition by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the study_timeline_attr_def table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('stad.' . $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the study_timeline_attr_def domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{		 	
	 	$data  = array(
						'study_timeline_attr' 					=> $obj->GetAttributeName(),
						'study_timeline_attr_description' 	=> $obj->GetAttributeDescription(),
						'attribute_type' 							=> $obj->GetAttributeType()
	 				  );
	 
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) 
	 	{
	 		$db->insert($this->table, $data);
	 		$obj->SetAttributeDefinitionId($db->lastInsertId());
	 	}
	 	else 
	 	{
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
	
}

