class Hb_Mapper_Study_StudyAttributeHistory extends Hb_Mapper_Mapper
{
	/**
	 * Variable for the Primary Key Field of Study Attr History table
	 *
	 * @var int 
	 */	
	protected $primary_key = 'study_attr_history_id';
	
	/**
	 * Variable for Study Attr History table
	 *
	 * @var string 
	 */	
	protected $table = 'study_attr_history';
	
	/**
	 * Build the StudyAttributeHistory Object
	 *
	 * @param Zend_Db_Table $row
	 * @return Hb_App_Study_StudyAttributeHistory
	 */
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyAttributeHistory
		(	$row->study_attr_history_id,
			$row->study_attr_id,
			$row->study_attr_value );
	}
	
	/**
	 * Returns Study Attr History data
	 * 
	 * @return Zend_Db_Select
	 */
	protected function GetBaseSelect()
	{
		$db = Hb_Util_Db_Connection::GetInstance();
		$select = $db->select();
		$select->from(array('sh' => 'study_attr_history'), 
							array(	'study_attr_history_id', 
										'study_attr_id', 
										'study_attr_value'	)
									);
		return $select;
	}
	
	/**
	 * Returns a row by id
	 * 
	 * @return object
	 */
	protected function doFindById($id)
	{
		$select = $this->GetBaseSelect();		
		$select->where('sh.study_attr_history_id = ?', $id);
				
		return $this->getRow($select);
	}
		
	/**
	 * Saving Data
	 *
	 * @param Hb_App_Object $obj Instance of a HB app object 
	 * @return object
	 */
	protected function doSave(Hb_App_Object $obj)
	{
		// @var $obj Hb_App_Study_StudyAttributeHistory  
		$data = array(
			'study_attr_id' 				=> $obj->GetStudyAttrId(),
			'study_attr_value'	 		=> $obj->GetStudyAttrValue());

		$db = Hb_Util_Db_Connection::GetInstance();
					
		if (is_null($obj->GetId())) 
		{
			$db->insert('study_attr_history', $data);
			$obj->SetStudyAttributeHistoryId($db->lastInsertId());
		}
		else 
		{
			$db->update('study_attr_history', $data, 'study_attr_history_id = ' . $obj->GetId());	
		}
	}
}
?>