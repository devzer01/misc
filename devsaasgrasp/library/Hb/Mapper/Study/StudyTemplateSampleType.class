class Hb_Mapper_Study_StudyTemplateSampleType extends Hb_Mapper_Mapper 
{
	/**
	 * Primary key
	 *
	 * @var string 
	 */
	protected $primary_key = 'study_template_sample_type_id';
	
	/**
	 * Table name
	 *
	 * @var string 
	 */
	protected $table = 'study_template_sample_type';
	
	/**
	 * Builds and returns the Study Template Sample Type domain object for this mapper
	 *
	 * @param $row $object Result row from the Zend_Db framework for the study_template_sample_type table
	 * @return object An instance of the Study Sample Type domain object 
	 */	
	protected function doBuildObject($row)
	{
		return new Hb_App_Study_StudyTemplateSampleType($row->study_template_sample_type_id,
															 			$row->study_template_id,
															 			$row->sample_type_id,
														 	 			null
																	  );
	} 
	
	/**
	 * Builds and returns a Zend_Db Select object
	 *
	 * @return $select object Result Select object from the Zend_Db framework 
	 */
	protected function GetBaseSelect()
	{
		$db 		= Hb_Util_Db_Connection::GetInstance();
		$select 	= $db->select();
	 	$select->from(array('stst' => 'study_template_sample_type'), array('study_template_sample_type_id',
	 																							 'study_template_id',
	 																							 'sample_type_id'));
	 	
	 	return $select;
	}
	
	/**
	 * Finds a Study Template Sample Type by it's Id
	 *
	 * @param $id int The record identifier that uniquely identifies the row.
	 * @return obj Result row from the Zend_Db framework for the study_template_sample_type table
	 */	
	protected function doFindById($id)
	{
	 	$select = $this->GetBaseSelect();
		$select->where('stst.'. $this->primary_key .'= ?', $id);
		 	
		return $this->getRow($select);
	}
	
	/**
	 * Saves a dirty domain object to the persistence layer
	 *
	 * @param Hb_App_Object $obj object Instance of the study_template_sample_type domain object
	 */
	protected function doSave(Hb_App_Object $obj)
	{		 	
	 	$data  = array(
			'study_template_id' 	=> $obj->GetStudyTemplateId(),
			'sample_type_id' 		=> $obj->GetSampleTypeId()
	 	);
	 	
	 	$db = Hb_Util_Db_Connection::GetInstance();
	 	
	 	if(is_null($obj->GetId())) 
	 	{
	 		$db->insert($this->table, $data);
	 		$obj->SetTypeId($db->lastInsertId());
	 	}
	 	else 
	 	{
	 		$db->update($this->table, $data, $this->primary_key. '=' .$obj->GetId());
	 	}
	}
	
}

?>