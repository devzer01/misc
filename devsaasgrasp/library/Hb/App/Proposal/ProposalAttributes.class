<?php

class Hb_App_Proposal_ProposalAttributes extends Hb_App_Attributes 
{
	protected $__proposal;
	
	protected $__proposal_id;
	
	public function __construct()
	{
	}
	
	public function AddAttribute(Hb_App_Proposal_ProposalAttribute $attribute)
	{
		try {
			parent::AddAttribute($attribute);
		}  catch (Hb_Data_ObjectInCollectionException $e)  {
			throw new Hb_Data_ObjectInCollectionException("Attribute Already Exists In Collection For Proposal ". $this->__proposal_id, 
				HB_DATA_EXCEPTION_ATTR_IN_COLLECTION);
		}
	}
	
	public function GetAttribute($name)
	{
		try {
			return parent::GetAttribute($name);
		} catch (Hb_Data_ObjectNotInCollectionException $e) {
			throw new Hb_Data_ObjectNotInCollectionException("Requested Attribute Not Found For Study " . $this->__proposal_id, 
				HB_DATA_EXCEPTION_ATTR_NOT_IN_COLLECTION);
		}
	}
	
	public function AddProposal(Hb_App_Proposal_Proposal $proposal)
	{
		$this->__proposal = $proposal;
		$this->__proposal_id = $proposal->proposal_id;
	}
}
?>