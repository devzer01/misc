class Hb_App_Project_ProjectAttributes extends Hb_App_Attributes 
{
	/**
	 * Project instance
	 *
	 * @var HB_App_Project_Project 
	 */
	protected $project = null;
	
	/**
	 * Project Id
	 *
	 * @var int 
	 */
	protected $project_id	= null;
	
	
	public function AddAttribute(Hb_App_Project_ProjectAttribute $attribute) 
	{
		try {
			parent::AddAttribute($attribute);
		} catch (Hb_Data_ObjectInCollectionException $e) {
			throw new Hb_Data_ObjectInCollectionException("Attribute Already Exists In Collection For Project ". $this->project_id,
				HB_DATA_EXCEPTION_ATTR_IN_COLLECTION);
		}
	}
	
	
	public function GetAttribute($name)
	{
		try {
			return parent::GetAttribute($name);
		}catch (Hb_Data_ObjectNotInCollectionException $e) {
			throw new Hb_Data_ObjectNotInCollectionException("Requested Attribute Not Found For Project " . $this->project_id,
				HB_DATA_EXCEPTION_ATTR_NOT_IN_COLLECTION);
		}
	}
	
	
	public function AddProject(Hb_App_Project_Project $project)
	{
		$this->project		= $project;
		$this->project_id	= $project->GetProjectId();
	}	
}

