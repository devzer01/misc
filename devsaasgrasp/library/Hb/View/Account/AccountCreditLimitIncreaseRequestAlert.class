<?php 
class Hb_View_Account_AccountCreditLimitIncreaseRequestAlert extends Hb_Util_View_View 
{
	protected $__template_name = "app/acm/email_credit_limit_increase.html";
	
	protected $__handler = "Smarty";
	
	protected $account = null;
	
	protected $user	= null;	
	
	protected $credit	= array();
	
	protected function LoadData()
	{
		$this->SetData('account', $this->account);
		$this->SetData('user', $this->user);		
		$this->SetData('credit', $this->credit);
	}
	
	public function SetAccount($account)
	{
		$this->account = $account;
	}
	
	public function SetUser($user)
	{
		$this->user = $user;
	}
	
	public function SetRequestReason($reason)
	{
		$this->credit['reason'] = $reason;
	}
	
	public function SetCurrentCreditLimit($limit)
	{
		$this->credit['current'] = $limit;
	}
	
	public function SetNewCreditLimit($limit)
	{
		$this->credit['new']		= $limit;
	}
}

?>